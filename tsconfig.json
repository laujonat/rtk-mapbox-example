{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "types/*": [
        "./types/*"
      ],
      "reducers/*": [
        "redux/reducers/*"
      ],
      "actions/*": [
        "./redux/actions/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
    }
  },
  "include": [
    "src",
    "src/types/index.d.ts"
  ]
}